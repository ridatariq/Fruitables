<% include ../partials/header1 %>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/landing.css' />
<% include ../partials/header2 %><% if(products) { %>

<section id="one">
    <div class="inner">
        <header class="align-center">
            <h1>ORDER DETAILS</h1>
            </br> <hr />
        </header>
             <section> 
                     
                    <table>
                        <thead>
                            <tr>              
                                <th>Quantity</th>
                                <th>Item</th>
                                <th>Price</th>
                                <th>      </th>
                            </tr>
                        </thead>
                        <tbody>                          
                                <% products.forEach(function(product) {%>
                                    <tr>
                                        <td><span class="badge"><%= product.qty  %></span></td>
                                        <td><%= product.item.title %></td>
                                        <td><span class="label label-success">$<%= product.price %></span></td>
                                        <td>                                        
                                                <div class="actions">
                                                        <a href="/reduce/<%= product.item._id%>"><i class="button icon good fas fa-minus small"></i></a>
                                                        <a href="/add/<%= product.item._id%>"><i class="button icon good fas fa-plus small"></i></a>
                                                        <a href="javascript:delay('/remove/<%= product.item._id%>')"
                                                         onclick="beep.play()"><i class="button special icon fa-trash small"></i></a>                          
                                                </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } %>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="2"></td>
                                <td><strong>Total: $<%= totalPrice %></strong></td>
                            </tr>
                        </tfoot>
                    </table>
                    <a href="/checkout"><button type="button" class="button good pull-right">Check Out</button></a>
            
            </section>  
       
    </div>
</section>
<% include ../partials/footer %>

